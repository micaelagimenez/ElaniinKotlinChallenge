<resources>
    <!-- Base application theme. -->
    <style name="ShapeAppearanceOverlay.App.CornerSize16Percent" parent="">
        <item name="cornerSize">16%</item>
    </style>

    <style name="Detail">
        <item name="android:font">@font/archivo</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Header">
        <item name="android:font">@font/archivo</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Subtitle">
        <item name="android:font">@font/archivo</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Descriptions">
        <item name="android:font">@font/archivo</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Button">
        <item name="android:font">@font/archivo</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/bg_button</item>
